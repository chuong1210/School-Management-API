			"name": "Authentication Endpoints",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// 1. Kiểm tra xem request có thành công không (status code 200)\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// 2. Lấy dữ liệu JSON từ response\r",
									"const responseData = pm.response.json();\r",
									"\r",
									"// 3. Trích xuất access_token từ dữ liệu\r",
									"const accessToken = responseData.access_token;\r",
									"\r",
									"// 4. Kiểm tra xem có lấy được token không và lưu nó vào biến môi trường\r",
									"if (accessToken) {\r",
									"    // Lưu token vào biến có tên là \"accessToken\" trong Environment đang hoạt động\r",
									"    pm.environment.set(\"accessToken\", accessToken);\r",
									"    \r",
									"    // In ra Console để kiểm tra (không bắt buộc nhưng rất hữu ích)\r",
									"    console.log(\"Access Token đã được lưu vào Environment!\");\r",
									"    console.log(\"Token: \" + accessToken);\r",
									"} else {\r",
									"    console.error(\"Không tìm thấy access_token trong response.\");\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
